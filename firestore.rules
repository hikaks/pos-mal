rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are permissive and are meant for development.
    // You should secure your database for production by implementing
    // authentication and proper data validation.
    // https://firebase.google.com/docs/firestore/security/get-started

    // Allow all operations on the 'categories' collection.
    match /categories/{categoryId} {
      allow read, write: if true;
    }

    // Allow all operations on the 'products' collection.
    match /products/{productId} {
      allow read, write: if true;
    }

    // Allow all operations on the 'transactions' collection.
    match /transactions/{transactionId} {
      allow read, write: if true;
    }
  }
}
