
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write to the 'categories' collection for development.
    match /categories/{categoryId} {
      allow read, write: if true;
    }

    // Allow read and write to the 'products' collection for development.
    match /products/{productId} {
      allow read, write: if true;
    }

    // Allow read and write to the 'transactions' collection for development.
    match /transactions/{transactionId} {
      allow read, write: if true;
    }
  }
}
